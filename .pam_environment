# Add ~/.local/bin to $PATH
PATH            DEFAULT=${PATH}:@{HOME}/.local/bin
# Default programs:
EDITOR          DEFAULT=nvim
TERMINAL        DEFAULT=st
BROWSER         DEFAULT=firefox
READER          DEFAULT=zathura

# Clean up home
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache
HISTORY_HOME    DEFAULT=${XDG_CACHE_HOME}
XAUTHORITY	    DEFAULT=${XDG_CONFIG_HOME}/Xauthority
ZDOTDIR         DEFAULT=${XDG_CONFIG_HOME}/zsh
LESSHISTFILE    DEFAULT=${HISTORY_HOME}/lesshst
GNUPGHOME       DEFAULT=${XDG_DATA_HOME}/gnupg
PASH_DIR  	    DEFAULT=${XDG_DATA_HOME}/password-store
ANDROID_SDK_HOME    DEFAULT=${XDG_CONFIG_HOME}/android
GOPATH          DEFAULT=${XDG_DATA_HOME}/go
PYTHONSTARTUP   DEFAULT=${XDG_CONFIG_HOME}/pythonrc
HISTFILE        DEFAULT=${HISTORY_HOME}/history
XINITRC         DEFAULT=${XDG_CONFIG_HOME}/xinitrc
WGETRC		    DEFAULT=${XDG_CONFIG_HOME}/wgetrc

# Set zsh variables
ZSH             DEFAULT=${XDG_CONFIG_HOME}/zsh

# Pash variables
PASH_GIT	    DEFAULT=1
